---
import Layout from "../layouts/Layout.astro";
import solarPanel from "../assets/images/servicii_energie_electrica/solarPanel.jpg";

const content = {
  heroSection: {
    image: solarPanel,
    title: "Energie Electrica",
  },
  section: {
    title: "Procesul de schimbare a furnizorului",
  },
};
---

<Layout title="Procesul de schimbare a furnizorului">
  <div class="heroSection">
    <img src={content.heroSection.image} alt="Solar Panel image" />
    <h1>{content.heroSection.title}</h1>
  </div>
  <div class="content">
    <h2>{content.section.title}</h2>

    <div class="wrapper">
      <!-- Tab links -->
      <div class="tab">
        <button
          class="tablinks"
          onclick="openTab(event, 'ModalitateDeLucru')"
          id="defaultOpen">MODALITATE DE LUCRU</button
