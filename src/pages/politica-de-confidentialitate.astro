---
import Layout from "../layouts/Layout.astro";
import { TEXTS } from "../texts";

const content = TEXTS.pages.politicaDeConfidentialitate;
---

<Layout title={content.title}>
  <div class="container">
    <h1>{content.title}</h1>
    <div class="wrapper">
      {
        content.text.map((paragraph) => {
          return <p>{paragraph}</p>;
        })
      }
    </div>
  </div>
</Layout>

<style lang="scss">
  .container {
    padding-top: 7.5rem;
    margin: 0px 5vw;

    .wrapper {
      padding-top: 2.5rem;

      p {
        margin: 1rem 0;
      }
    }
  }
</style>
